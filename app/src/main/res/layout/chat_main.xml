<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/appIsConnected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#00a6c3"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="100dp"
        android:text="Request Data" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp">

        <TextView
            android:id="@+id/sensor_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Number of sensors"
            android:layout_marginRight="30dp"
            android:layout_alignBaseline="@+id/sensor_number"/>
        <EditText
            android:id="@+id/sensor_number"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sensor_text"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Request Data from Server App"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/display_data"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Number of sensors"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="30dp"/>
</LinearLayout>